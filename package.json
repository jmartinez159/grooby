{
  "name": "groobi",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test:unit": "jest --coverage",
    "build:python": "cd backend && pyinstaller backend.spec --distpath dist --workpath build --clean -y",
    "build:electron": "electron-builder --config electron-builder.json",
    "build": "npm run build:python && npm run build:electron"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}